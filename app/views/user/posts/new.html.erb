  <div class=container>
   <div class="row mb-3">
     <div class="col-md-3">
       <h2 class="ml-5 mt-3">新規投稿</h2>
     </div>
    </div>
    <div class="row">
      <div class="col-md-5 mx-auto mb-5">
        <div class="form mt-5">
          <%= form_with model: @post, url: user_posts_path, method: :post, local: true do |f| %>
          <div class="filed">
           <div class="col-2"><%= f.label :画像 %></div>
           <%= f.file_field :image, accept: "image/*" %>
          </div>
          <div class="form-group">
          <div class="mt-2"><%= f.label :'タイトル' %></dib><br>
          <%= f.text_field :title, autofocus: true, class: 'form-control'%>
          </div>
          <div class="form-group">
          <%= f.label :住所 %>
          <%= f.text_field :address, autofocus: true, class:'form-control' %>
          </div>
          <div class="form-group">
          <%= f.label :本文 %>
          <%= f.text_area :body, autofocus: true, size:"50x10", class:'form-control' %>
          </div>
          <%= f.submit '投稿', class:'btn btn-success' %>
         <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
