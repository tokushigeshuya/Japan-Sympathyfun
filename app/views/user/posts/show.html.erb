<h1>SHOWページ</h1>
<%= image_tag @post.get_image %>
<%= @post.title %>
<%= @post.body %>
<%= @post.user.name %>

<% if @post.user_id == current_user.id %>
<%= link_to "編集", edit_user_post_path(@post) %>
<%= link_to "削除", user_post_path(@post), method: :delete, date: { confirm: '削除しますか？'} %>
<% end %>

<div>
  <p>コメント件数：<%= @post.post_comments.count %></p>
  <% @post.post_comments.each do |post_comment| %>
    <p><%= image_tag post_comment.user.get_image %></p>
    <%= post_comment.user.name %>
    <%= post_comment.created_at.strftime('%Y/%m/%d') %><%= post_comment.comment %>
    <% if post_comment.user == current_user %>
      <%= link_to "削除", user_post_post_comment_path(post_comment.post, post_comment), method: :delete %>
    <% end %>
  <% end %>
</div>
<div>
  <%= form_with model: [@post,@post_comment], url: user_post_post_comments_path(@post,@post_comment), method: :post do |f| %>
    <%= f.text_area :comment, rows: '5', placeholder: "コメントをここに" %>
    <%= f.submit "送信する" %>
  <% end %>
</div>