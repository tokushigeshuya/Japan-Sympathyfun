<div class="album py-5 bg-light">
  <div class="container">
    <div class="row">
      <div class="col-md-4">
        <% if params[:tag_name] %>
          <h3 class="ml-3 mt-3"><%= params[:tag_name] %>のタグ一覧</h3>
        <% else %>
         <h3 class="ml-3 mt-3">投稿一覧</h3>
        <% end %>
         <p class="text-success"><%= notice %></p>
      </div>
    </div>
    <div class="row mt-3">
        <% @post.each do |post| %>
          <div class="col-md-3">
            <div class="card mb-4 shadow-sm">
              <%= image_tag post.get_image, class: 'card-img-top img-responsive-overwrite mx-auto thumb-img' %>
                <div class="card-body">
                  <p class="card-text"><%= link_to post.title, user_post_path(post.id) %></p>
                    <div class="d-flex justify-content-between align-items-center">
                      <item>
                      <%= image_tag post.user.get_image, size: "30x30" %>
                      <%= link_to post.user.name, user_user_path(post.user.id) %>
                      </item>
                      <small class="text-muted"><%= post.created_at.strftime('%Y/%m/%d') %></small>
                    </div>
                </div>
            </div>
          </div>
        <% end %>
    </div>
    <div class="row justify-content-md-center my-3">
      <% if params[:tag_name] %>
        <% else %>
          <%= paginate @post %>
        <% end %>
      </div>
    <% if user_signed_in? %>
    <div class="row">
      <div class="col-md-4">
         <h3 class="ml-3 mt-3">フォローユーザーの投稿</h3>
      </div>
    </div>
    <% end %>
    <%= render 'followings_post', posts: @posts %>
  </div>
</div>
