<div class="row">
  <div class="col-md-4">
    <h3 class="ml-3 mt-3">フォロワーランキング</h3>
  </div>
</div>
<div class="row">
  
  <% rank.each.with_index(1) do |rank, i| %>
          <div class="col-md-4">
            第<%= i %>位
            <div class="card mb-4 shadow-sm">
              <%= image_tag rank.get_image, class: 'mx-auto img-responsive-overwrite thumb-img' %>
                <div class="card-body">
                  <p class="card-text"><%= link_to rank.name, user_user_path(rank.id) %></p>
                    <div class="d-flex justify-content-between align-items-center">
                      <item>
                       フォロー:<%= link_to rank.followings.count, user_user_followings_path(rank.id) %>
                       フォロワー:<%= link_to rank.followers.count, user_user_followers_path(rank.id) %>
                      </item>
                    </div>
                </div>
            </div>
          </div>
  <% end %>
</div>