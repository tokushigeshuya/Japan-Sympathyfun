<h1>User::Users#show</h1>

<%= image_tag @user.get_image %>
<%= @user.name %>
<%= @user.introduction %>

<% if @user != current_user %>
  <% if current_user.following?(@user) %>
    <%= link_to "フォロー外す", user_user_relationships_path(@user.id), method: :delete %>
  <% else %>
    <%= link_to "フォローする", user_user_relationships_path(@user.id), method: :post %>
  <% end %>
<% end %>

<% if @user == current_user %>
<%= link_to 'プロフィール編集', edit_user_user_path(@user.id) %>
<% end %>


<p>新着投稿</p>
<% if @post %>
  <% @post.each do |post| %>
  <%= image_tag post.get_image %>
  <%= link_to post.title, user_post_path(post.id) %>
  <% end %>
<% else %>
  <p>現在このユーザーの投稿はありません</p>
<% end %>
