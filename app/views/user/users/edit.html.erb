<div class="container">
  <div class="row mb-3">
    <div class="col-md-3">
      <h3 class="ml-5 mt-3">ユーザー編集</h3>
    </div>
  </div>
  <div class='row'>
    <div class="col-md-5">
      <div class="card w-100 mx-auto mt-4 shadow-lg">
       <%= image_tag @user.get_image, size: "150x150", class: 'card-img-top　img-responsive-overwrite mx-auto' %>
        <div class="card-body">
        <p>ユーザーネーム：<strong><%= @user.name %></strong></p>
        <div class="mb-3">
          <i class="far fa-address-card mr-2"></i>紹介文
        </div>
        <div class="border mb-3"><%= @user.introduction%></div>
        </div>
      </div>
    </div>
    <div class="col-md-5 ">
      <div class="form-group">
        <%= form_with model: @user, url: user_user_path, method: :patch, local: true do |f| %>
            <div class="col-2"><%= f.label :画像 %></div>
            <%= f.file_field :profile_image, accept: "image/*" %>
            <div class="mt-2"><%= f.label :ユーザーネーム %></div>
            <%= f.text_field :name, autofocus: true, class: 'form-control' %>
            <div class="mt-2"><%= f.label :自己紹介文 %></div>
            <%= f.text_area :introduction, autofocus: true, class: 'form-control' %><br>
            <%= f.submit '更新する', class:'btn btn-success' %>
            <% end %>
      </div>
      <%= link_to '退会する', unsubscribe_user_user_path, class: 'btn btn-danger' %>
    </div>
</div>
</div>