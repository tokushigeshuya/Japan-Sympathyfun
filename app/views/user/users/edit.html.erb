<h1>User::Users#edit</h1>
<%= image_tag @user.get_image %>
<p>name|<%= @user.name %></p>
<p>自己紹介|<%= @user.introduction%></p>


<%= form_with model: @user, url: user_user_path, method: :patch, local: true do |f| %>
    <h4>画像</h4>
      <%= f.file_field :profile_image, accept: "image/*" %>
    <p>name</p>
      <%= f.text_field :name %>

      <p>自己紹介</p>
      <%= f.text_area :introduction %><br>

      <%= f.submit 'Update' %>
    <% end %>

<%= link_to '退会する', unsubscribe_user_user_path %>

